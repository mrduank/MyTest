<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/FitSystemWindows"
    tools:context="com.example.dk.mytest.ui.fragment.MoodFragment">

    <com.example.dk.mytest.view.AutoViewPager
        android:id="@+id/auto_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.example.dk.mytest.view.ViewPagerPointView
        android:id="@+id/viewPager_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="发表说说"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />
</FrameLayout>
